<record
	name="shopifyAccount"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>
		<description-field/>
		<deleted-field/>

		<!-- settings -->

		<string-field
			name="storeName"
			nullable="yes"/>

		<string-field
			name="privateAppName"
			nullable="yes"/>

		<string-field
			name="apiKey"
			nullable="yes"/>

		<string-field
			name="password"
			nullable="yes"/>

		<string-field
			name="sharedSecret"
			nullable="yes"/>

		<!-- data -->

		<integer-field
			name="lastEventId"
			default="0"/>

		<timestamp-field
			name="nextFullSynchronise"
			column-type="postgresql"/>

		<!-- statistics -->

		<integer-field
			name="numEvents"
			default="0"/>

	</fields>

	<background-processes>

		<background-process
			object-type="shopify-account"
			name="Full synchronise"
			description="Fully synchronise shopify account"
			frequency="30 seconds"/>

	</background-processes>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a shopify account"
			template="yes"/>

		<priv-type
			name="View"
			description="View a shopify account"
			template="yes"/>

		<priv-type
			subject="slice"
			name="Shopify store create"
			description="Create new shopify account in a slice"
			template="yes"/>

	</priv-types>

</record>